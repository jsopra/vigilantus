{
    "minimum-stability": "stable",
    "license": "MIT",
    "require": {
        "php": ">=5.5.0",
        "ext-gearman": "*",
        "ext-redis": "*",
        "ext-pdo_pgsql": "*",
        "yiisoft/yii2": "*",
        "yiisoft/yii2-bootstrap": "*",
        "yiisoft/yii2-swiftmailer": "*",
        "kartik-v/yii2-widget-select2": "v1.0.1",
        "kartik-v/yii2-widget-colorinput": "dev-master",
        "kartik-v/yii2-widget-rating": "*",
        "2amigos/yii2-ckeditor-widget" : "*",
        "phpoffice/phpexcel": "dev-master",
        "yiisoft/yii2-redis": "*",
        "yiisoft/yii2-imagine": "*",
        "perspectivain/php-postgis": "dev-master",
        "perspectivain/yii2-mapbox-leaflet-helper": "dev-master",
        "perspectivain/yii2-geo": "dev-master",
        "yiisoft/yii2-authclient": "*",
        "cosenary/instagram": "dev-master",
        "bower-asset/intro.js": "*",
        "perspectivain/yii2-gearman": "dev-master",
        "miloschuman/yii2-highcharts-widget": "*",
        "hashids/hashids": "~1.0",
        "robregonm/yii2-pdf": "dev-master",
        "rmrevin/yii2-fontawesome": "2.12.*",
        "vlucas/phpdotenv": "~2.0",
        "frostealth/yii2-aws-s3" : "1.0.0"
    },
    "require-dev": {
        "yiisoft/yii2-codeception": "*",
        "yiisoft/yii2-debug": "*",
        "yiisoft/yii2-gii": "*",
        "codeception/codeception": "2.*",
        "codeception/verify": "0.2.*",
        "codeception/specify": "0.3.*",
        "perspectiva/yii2-phactory": "*"
    },
    "config": {
        "process-timeout": 1800
    },
    "scripts": {
        "post-create-project-cmd": [
            "yii\\composer\\Installer::postCreateProject"
        ]
    },
    "extra": {
        "writable": [
            "runtime",
            "web/assets"
        ],
        "executable": [
            "yii"
        ],
        "asset-installer-paths": {
            "npm-asset-library": "vendor/npm",
            "bower-asset-library": "vendor/bower"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@bitbucket.org:perspectivain/yii2-phactory.git"
        }
    ]
}
